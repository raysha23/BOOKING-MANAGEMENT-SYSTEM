@{
	Layout = "_AdminLayout";
	ViewData[index: "Title"] = "Bookings";
}
<h2>Bookings</h2>
<p>View and manage all bookings</p>

<div class="row align-items-center mb-3">

	<!-- Search -->
	<div class="col-md-8">
		<div class="input-group">
			<span class="input-group-text">
				<i class="bi bi-search"></i>
			</span>
			<input type="text" class="form-control" placeholder="Search bookings..." />
		</div>
	</div>

	<!-- Status -->
	<div class="col-md-4 text-end">
		<select class="form-select">
			<option value="">All Status</option>
			<option value="confirmed">Confirmed</option>
			<option value="pending">Pending</option>
			<option value="canceled">Canceled</option>
		</select>
	</div>

</div>


<div class="table-responsive">
    <table class="table table-hover align-middle mb-0">

        <thead class="table-light">
            <tr>
                <th>Booking ID</th>
                <th>User</th>
                <th>Event</th>
                <th>Date</th>
                <th>Status</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>

        <tbody>

            <!-- Pending Booking -->
            <tr>
                <td class="fw-semibold">#BKG001</td>
                <td>Jane Smith</td>
                <td>Annual Conference</td>
                <td>Sep 15, 2024</td>
                <td>
                    <span class="badge bg-warning text-dark d-inline-flex align-items-center">
                        <i class="bi bi-hourglass-split me-1"></i>
                        Pending
                    </span>
                </td>
                <td class="text-end">
                    <button class="btn btn-sm btn-outline-success me-1" title="Approve">
                        <i class="bi bi-check-circle"></i>
                        Approve
                    </button>
                    <button class="btn btn-sm btn-outline-danger" title="Cancel">
                        <i class="bi bi-x-circle"></i>
                        Cancel
                    </button>
                </td>
            </tr>

            <!-- Approved Booking -->
            <tr>
                <td class="fw-semibold">#BKG002</td>
                <td>John Dela Cruz</td>
                <td>Tech Meetup</td>
                <td>Sep 20, 2024</td>
                <td>
                    <span class="badge bg-success d-inline-flex align-items-center">
                        <i class="bi bi-check-circle me-1"></i>
                        Approved
                    </span>
                </td>
                <td class="text-end text-muted">
                    <span class="small">No actions available</span>
                </td>
            </tr>

        </tbody>

    </table>
</div>
