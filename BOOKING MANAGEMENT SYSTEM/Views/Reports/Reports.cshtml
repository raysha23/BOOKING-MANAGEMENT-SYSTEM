@{
	Layout = "_AdminLayout";
	ViewData["Title"] = "Reports";
}

<style>
	.page-header h2 {
		font-size: 2rem;
		font-weight: bold;
		margin: 0;
	}

	.page-header p {
		font-size: 1rem;
		color: #6c757d;
		margin: 0;
	}

	.export-btn {
		color: white;
		border-radius: 0.5rem;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
</style>

<div
	class="page-header d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">

	<!-- LEFT SIDE -->
	<div>
		<h2>Reports & Analytics</h2>
		<p>Generate and view detailed reports on bookings and events</p>
	</div>

	<!-- RIGHT SIDE -->
	<div class="d-flex gap-2">
		<button class="btn export-btn bg-danger">
			<i class="bi bi-file-earmark-pdf"></i>
			Export PDF
		</button>

		<button class="btn export-btn bg-success">
			<i class="bi bi-file-earmark-excel"></i>
			Export Excel
		</button>
	</div>

</div>

<div class="p-3 bg-white shadow-sm w-100 ">
	<div class="d-flex align-items-center gap-3">

		<!-- Icon -->
		<div class="icon fs-2 text-primary">
			<i class="bi bi-bar-chart-fill"></i>
		</div>

		<!-- Content -->
		<div class="flex-grow-1 d-flex align-items-center ">

			<h5 class="card-title mb-0">Report Period</h5>

			<select class="form-select w-auto ms-3">
				<option value="last7">Daily (Last 7 Days)</option>
				<option value="last6">Monthly (Last 6 Months)</option>
			</select>

		</div>

	</div>
</div>

<div class="bg-white shadow-sm w-50 p-4 my-4">
	<h5 class="text-muted">Total Bookings</h5>
	<h3>99</h3>
	<p class="text-success"><span>+12 </span>from the last period</p>
</div>

<!-- Include Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- Card -->
<div class="card bg-white shadow-sm p-3 mb-4">
	<h5>Bookings</h5>
	<canvas id="BookingChart" style="height:300px;"></canvas>
</div>

<script>
	const ctx = document.getElementById('BookingChart').getContext('2d');
	const BookingChart = new Chart(ctx, {
		type: 'bar', // Vertical bar chart
		data: {
			labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'], // X-axis labels
			datasets: [{
				label: 'Bookings',
				data: [12, 19, 8, 15, 20, 13, 9], // Sample data
				backgroundColor: '#4F39F6', // Bar color
				borderRadius: 5 // Rounded bars
			}]
		},
		options: {
			responsive: true,
			plugins: {
				legend: { display: false }, // Hide legend if not needed
				tooltip: { enabled: true }
			},
			scales: {
				x: { grid: { display: false } }, // Remove x-axis grid
				y: {
					beginAtZero: true,
					grid: { color: '#e0e0e0' }
				}
			}
		}
	});
</script>


<div class="table-responsive bg-white shadow-sm p-4 mt-4">
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Day</th>
				<th>Bookings</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>Mon</td>
				<td>10</td>
			</tr>
			<tr>
				<td>Tue</td>
				<td>15</td>
			</tr>
			<tr>
				<td>Wed</td>
				<td>20</td>
			</tr>
			<tr>
				<td>Thu</td>
				<td>18</td>
			</tr>
			<tr>
				<td>Fri</td>
				<td>22</td>
			</tr>
			<tr>
				<td>Sat</td>
				<td>14</td>
			</tr>
			<tr>
				<td>Sun</td>
				<td>25</td>
			</tr>
	</table>
</div>